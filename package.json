{
  "name": "typescript-react-redux-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate typescript-react-redux project",
  "author": "@zlass",
  "license": "ISC",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server -d --config webpack.conf.js",
    "build": "cross-env NODE_ENV=production webpack -p",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupFiles": [
      "<rootDir>/src/setupTesting.ts"
    ],
    "transform": {
      "^.+\\.+(j|t)sx?$": "babel-jest"
    },
    "testMatch": [
      "**/?(*.)+(test|spec).(j|t)s?(x)"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "connected-react-router": "^4.4.1",
    "history": "^4.7.2",
    "lodash": "^4.17.10",
    "querystring": "^0.2.0",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-router": "^4.3.1",
    "react": "^16.5.2",
    "redux-saga": "^0.16.0",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/history": "^4.7.0",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.9.3",
    "@types/react": "^16.4.12",
    "@types/react-dom": "^16.0.7",
    "@types/react-redux": "^6.0.6",
    "@types/react-router": "^4.0.30",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0-beta.6",
    "cross-env": "^5.2.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "react-hot-loader": "^4.3.11",
    "redux-devtools-extension": "^2.13.5",
    "regenerator-runtime": "^0.12.1",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  }
}
